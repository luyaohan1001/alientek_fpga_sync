#include <unistd.h>
#include "system.h"
#include "draw_disp.h"
#include "GUI.h"
#include "touch.h";
#include "mculcd.h";

extern _disp_dev dispdev;	//界面显示参数
extern _lcd_gui lcdgui;

//触摸处理
void TouchPro(alt_u16 x_pos,alt_u16 y_pos){
    alt_u16 t = y_pos/dispdev.set_area_height;
    alt_u16 touch_func = 0;
	if(x_pos>=lcdgui.width-dispdev.set_area_width && x_pos<lcdgui.width && y_pos<lcdgui.height)
    {
		if(t>=0 && t<2)
			touch_func = t;
		else if(t>=2)
		{
			if(x_pos <= lcdgui.width - dispdev.set_area_width/2)
				touch_func = (t-1)*2;
			else
				touch_func = (t-1)*2+1;
		}
    }
	else if(x_pos >= lcdgui.width-9*dispdev.set_area_width/5 && x_pos < lcdgui.width-dispdev.set_area_width && y_pos<=dispdev.wave_ystart)
		touch_func = TP_EDGE;
	else
		return;
	switch(touch_func){
	case TP_AUTO : break;
	case TP_RUN_STOP :
		GUI_SetTextAlign(GUI_TA_HCENTER|GUI_TA_VCENTER);
		GUI_SetTextMode(GUI_TM_NORMAL);
		if(dispdev.run_flag){
			GUI_SetColor(GUI_RED);           //设置GUI前景色
			dispdev.run_flag = 0;
			GUI_DispStringAt(" RUN ",lcdgui.width-dispdev.set_area_width/2,lcdgui.height/7+dispdev.set_area_height/2);
		}
		else{
			GUI_SetColor(GUI_YELLOW);        //设置GUI前景色
			dispdev.run_flag = 1;
			GUI_DispStringAt("STOP",lcdgui.width-dispdev.set_area_width/2,lcdgui.height/7+dispdev.set_area_height/2);
		}
		break;
	case TP_LEFT : break;
	case TP_RIGHT: break;
	case TP_UP :
		if(dispdev.zero_mark < 15)
			ZeroMarkAddDisp();
			dispdev.zero_mark++;
		ZeroMarkDisp(dispdev.zero_mark);
		break;
	case TP_DOWN :
		if(dispdev.zero_mark >1)
			ZeroMarkSubDisp();
			dispdev.zero_mark--;
		ZeroMarkDisp(dispdev.zero_mark);
		break;

	break;
	case TP_HOR_ADD : break;
	case TP_HOR_SUB : break;
	case TP_VER_ADD : break;
	case TP_VER_SUB : break;
	case TP_TRIG_ADD : break;
	case TP_TRIG_SUB : break;
	case TP_EDGE : break;
	}
	alt_dcache_flush_all();
}








